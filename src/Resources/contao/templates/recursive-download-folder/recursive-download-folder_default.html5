<ul class="<?php echo $this->level; ?>"> 
<?php foreach ($this->elements as $element): ?>
  <?php if ($element['type'] === 'folder'): ?>
  <li class="<?php echo $element['css_class']; ?>">
  <?php if ($element['is_empty']) : ?>    
    <span title="<?php echo $element['data']['title']; ?>"><?php echo $element['data']['link']; ?></span>
  <?php else : ?>    
    <a onclick="toggleFolder(this);" title="<?php echo $element['data']['title']; ?>"><?php echo $element['data']['link']; ?></a><?php echo $element['elements_rendered']; ?>
  <?php endif; ?>    
  </li>
  <?php else: ?>
  <li class="<?php echo $element['css_class']; ?>"><a href="<?php echo $element['data']['href']; ?>" title="<?php echo $element['data']['title']; ?>"><?php echo $element['data']['link']; ?> <span class="size">(<?php echo $element['data']['filesize']; ?>)</span></a></li>
  <?php endif; ?>
<?php endforeach; ?>
</ul>
